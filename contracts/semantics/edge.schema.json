  "required": ["src", "dst", "rel"],
  "additionalProperties": false,
  "properties": {
    "src": { "type": "string" },
    "dst": { "type": "string" },
    "rel": { "type": "string" },
    "weight": { "type": "number" },
    "why": {
      "type": "array",
      "items": { "type": "string" }
    },
    "updated_at": { "type": "string", "format": "date-time" }
  }
}
