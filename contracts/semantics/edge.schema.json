{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://semantah/contracts/semantics/edge.schema.json",
  "title": "SemEdge",
  "type": "object",
  "required": ["src", "dst", "rel"],
  "additionalProperties": false,
  "properties": {
    "src": { "type": "string" },
    "dst": { "type": "string" },
    "rel": { "type": "string" },
    "weight": { "type": "number" },
    "why": {
      "oneOf": [
        { "type": "string" },
        {
          "type": "array",
          "items": { "type": "string" }
        }
      ]
    },
    "updated_at": { "type": "string", "format": "date-time" }
  }
}
